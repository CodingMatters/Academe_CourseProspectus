{
    "name": "codingmatters/academe-prospectus",
    "description": "Vanilla Integration of Course Prospectus for Academe Systems ",
    "keywords": ["course prospectus"],
    "homepage": "https://chronicles.codingmatters.io/academe/course-prospectus/",
    "license": "MIT",
    "authors": [
        {
            "name": "Gab Amba",
            "email": "gamba@gabbydgab.com",
            "homepage": "http://www.gabbydgab.com/"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-router": "^3.0",
        "zendframework/zend-navigation": "^2.7",
        "zendframework/zend-config": "^2.6",
        "zendframework/zend-i18n-resources": "^2.5",
        "zendframework/zend-expressive": "^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-expressive-zendviewrenderer": "^1.1",
        "zendframework/zend-expressive-zendrouter": "^1.0"
    },
    "require-dev": {        
        "phpunit/phpunit": "^5.3",
        "phpunit/php-invoker": "^1.1",
        "squizlabs/php_codesniffer": "^2.3",
        "phpbench/phpbench": "^0.11",
        "filp/whoops": "^2.0",        
        "ocramius/proxy-manager": "^2.0"
    },
    "autoload": {
        "classmap": ["./src/Module.php"],
        "psr-4": {
            "Academe\\Prospectus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Academe\\ProspectusTest\\": "test/"
        }        
    },
    "extra": {
        "coding-matters": {
            "component": "Academe\\Prospectus",
            "config-provider": "Academe\\Prospectus\\Module"
        },
        "branch-alias": {
            "dev-master": "1.0-alpha",
            "dev-develop": "1.0-dev"
        }
    },
    "scripts": {
        "post-install-cmd"  : [
            "@check"
        ],
        "post-update-cmd"   : [            
            "@check"
        ],
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs src",
        "cs-fix": "phpcbf src",
        "test": "phpunit"
    },
    "minimum-stability": "stable"
}
